<!-- res/layout/custom_dialog_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="42dp"
    android:background="@drawable/diaglog"
    android:padding="16dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/info"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="143dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon_info_detail"
        android:layout_marginTop="28dp"
        android:clipToOutline="true"
        />

    <TextView
        android:id="@+id/are_your_su"
        android:layout_width="262dp"
        android:layout_height="67dp"
        android:layout_margin="34dp"
        android:layout_marginTop="15dp"
        android:text="@string/edit_note"
        android:textAppearance="@style/are_your_su"
        android:layout_gravity="center"
        android:gravity="center"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:id="@+id/button_comfirm_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_comfirm_delete" />

    <Button
        android:id="@+id/button_comfirm_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Có"
        android:textColor="@android:color/white"
        android:background="@drawable/button_comfirm_cancel" />
</LinearLayout>
</LinearLayout>
